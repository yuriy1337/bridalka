<h1>Listing photos</h1>

<table>
  <tr>
    <th>Gallery</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each_with_index do |photo, i| %>
  <tr>
    <td><%= photo.gallery_id %></td>
    <td><%= (i + 1).to_s %></td>
    <td><%= image_tag photo.image_url(:thumb).to_s %></td>
    <td><%= link_to 'Show', ([@gallery, photo]) %></td>
    <td><%= link_to 'Edit', [:edit, @gallery, photo]%></td>
    <td><%= link_to 'Destroy', ([@gallery, photo]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

