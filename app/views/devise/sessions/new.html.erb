<div class="center-content-div gray-border whiteSmokeBg field-margin-top form-padding">
	<% if flash[:notice] %>
		<div class="alert alert-success">
			<%= notice %>
		</div>
	<% end %>
	
	<% if flash[:alert] %>
	<div id="error_explanation" class="alert alert-error">
			<%= alert %>
	</div>
	<% end %>
	
	<div class="ui-widget-header ui-tabs ui-widget ui-widget-content">Sign In</div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="field two-wide">
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>
	<div class="field field-margin-top" >
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<% if devise_mapping.rememberable? -%>
	<div class="field field-margin-top checkboxes" >
		<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	</div>
	<% end -%>
	<div class="field field-margin-top actions">
		<%= f.submit "Sign in", :class => "btn" %>
	</div>
	<% end %>
	<div class="field">
		<%= render "devise/shared/links" %>
	</div>
	<br/>
</div>