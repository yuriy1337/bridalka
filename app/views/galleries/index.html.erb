<% content_for :head do %>
  <title>Galleries - Bridal Kaleidoscope</title>
<% end %>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'galleries/galleries' %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag 'galleries/galleries' %>
<% end %>
